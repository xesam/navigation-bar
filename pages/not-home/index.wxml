<scroll-view class="scrollarea" scroll-y type="list">
    <navigation-bar title="only home"
                    back="{{false}}"
                    home-button="{{true}}"
                    color="black"
                    background="#f5f5f5"
                    bindback="back"
                    bindhome="home"/>
    <navigation-bar title="only back"
                    back="{{true}}"
                    color="black"
                    background="#f5f5f5"
                    bindback="back"
                    bindhome="home"/>
    <navigation-bar title="Auto Nav"
                    color="black"
                    background="#f5f5f5"
                    bindback="back"
                    bindhome="home"
                    auto-nav
                    home-page="/pages/index/index"/>
</scroll-view>